{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "index.js",
    "app",
    "test",
    "storybook"
  ]
}